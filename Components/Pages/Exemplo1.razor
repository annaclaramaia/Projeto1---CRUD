<style>
    .form-control {
        margin-bottom: 15px;
        border: 2px solid blue;
    }
</style>

@code {

    private string Título="Formulário de Cadastro";

    private string xNome;
    private string xCep = "";

    private void Enviar()
    {
        if(string.IsNullOrEmpty(xNome))
        {
            Título = "Por favor, preencha o campo Nome.";
            return;
        }

        if(string.IsNullOrEmpty(xCep))
        {
            Título = "Por favor, preencha o campo CEP.";
            return;
        }

        Título = "Formulário Enviado com Sucesso!";
        // StateHasChanged();

    }
}
